---

---

  <!-- Hero -->
  <section
    id="inicio"
    class="relative h-screen
           bg-hero bg-center bg-cover
           flex items-center justify-center text-center text-white
           -mt-nav pt-nav overflow-hidden" 
             style={{
        backgroundImage: `linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('/assets/fondo.jpg')`
      }}
  >
    <!-- Background decoration -->
    <div class="absolute inset-0">
      <div class="absolute top-20 left-20 w-72 h-72 bg-primary/10 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-20 right-20 w-96 h-96 bg-nosotros-blue/10 rounded-full blur-3xl animate-pulse delay-1000"></div>
    </div>

    <div class="max-w-custom mx-auto px-4 relative z-10">

      <h1 class="text-4xl md:text-6xl lg:text-7xl font-black mb-6 tracking-tight leading-tight">
        <span class="bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent">
          CIPRES SOLUCIONES
        </span>
        <br>
        <span class="text-primary">INDUSTRIALES</span>
      </h1>
      
      <p class="text-lg md:text-xl lg:text-2xl mb-8 text-gray-200 max-w-3xl mx-auto leading-relaxed px-4">
        Soluciones modernas para empresas que quieren crecer.
        <span class="block text-base md:text-lg lg:text-xl text-gray-300 mt-2">Mantenimiento predictivo, preventivo y correctivo especializado</span>
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a
          href="#contacto"
          class="group relative inline-flex items-center gap-3 bg-gradient-to-r from-primary to-nosotros-blue text-white font-semibold py-4 px-8 rounded-2xl hover:from-nosotros-blue hover:to-primary transform hover:scale-105 transition-all duration-300 shadow-2xl hover:shadow-primary/25"
        >
          <span>Contáctanos</span>
          <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        
        <a
          href="#servicios"
          class="group inline-flex items-center gap-3 bg-white/10 backdrop-blur-sm border border-white/20 text-white font-medium py-4 px-8 rounded-2xl hover:bg-white/20 transition-all duration-300"
        >
          <span>Ver Servicios</span>
          <svg class="w-5 h-5 group-hover:translate-y-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </a>
      </div>

      <div class="mt-16 grid grid-cols-3 gap-8 max-w-2xl mx-auto">
        <div class="text-center">
          <div class="text-3xl font-bold text-primary mb-1">70%</div>
          <div class="text-sm text-gray-300">Fallas prevenibles</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-primary mb-1">24/7</div>
          <div class="text-sm text-gray-300">Soporte técnico</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-primary mb-1">100%</div>
          <div class="text-sm text-gray-300">Garantía</div>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>
