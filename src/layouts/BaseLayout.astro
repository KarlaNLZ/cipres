---
import '../styles/global.css';
const { title = "CIPRES" } = Astro.props;
const isHome = Astro.url.pathname === '/';
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>
  </head>
  <body class="font-sans text-text bg-white leading-relaxed flex flex-col min-h-screen">

    <!-- Navbar moderno y responsivo -->
    <header
      id="navbar"
      class="fixed inset-x-0 top-0 h-nav bg-transparent backdrop-blur-sm border-b border-white/10 z-50 transition-all duration-500"
    >
      <!-- Container principal -->
      <div class="mx-auto max-w-7xl flex items-center justify-between h-full px-4 lg:px-8">
        
        <!-- Logo moderno -->
        <a href="/" class="flex items-center gap-2 group">
          <div class="w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <img 
              src="/assets/logoCipres.png" 
              alt="CIPRES Logo" 
              class="w-full h-full object-contain mix-blend-multiply"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
            />
            <span class="text-white font-black text-lg hidden">C</span>
          </div>
        </a>

        <!-- Menú desktop moderno -->
        <nav class="hidden lg:block">
          <ul class="flex items-center space-x-1">
            <li>
              <a href="#inicio" class="nav-link group relative px-4 py-2 text-white hover:text-primary transition-colors duration-300 font-medium navbar-text">
                <span class="relative z-10">Inicio</span>
                <div class="absolute inset-0 bg-white/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </a>
            </li>
            <li>
              <a href="#nosotros" class="nav-link group relative px-4 py-2 text-white hover:text-primary transition-colors duration-300 font-medium navbar-text">
                <span class="relative z-10">Nosotros</span>
                <div class="absolute inset-0 bg-white/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </a>
            </li>
            <li>
              <a href="#servicios" class="nav-link group relative px-4 py-2 text-white hover:text-primary transition-colors duration-300 font-medium navbar-text">
                <span class="relative z-10">Servicios</span>
                <div class="absolute inset-0 bg-white/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </a>
            </li>
           
            <!-- Botón CTA -->
            <li class="ml-4">
              <a href="#contacto" class="inline-flex items-center gap-2 bg-gradient-to-r from-primary to-nosotros-blue text-white px-4 py-2 rounded-xl font-semibold hover:from-nosotros-blue hover:to-primary transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl">
                <span>Contáctanos</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </li>
          </ul>
        </nav>

        <!-- Botón hamburguesa moderno -->
        <div class="lg:hidden">
          <button
            id="nav-toggle"
            class="w-10 h-10 flex flex-col justify-center items-center text-white focus:outline-none group navbar-text"
            aria-label="Mostrar menú"
            type="button"
          >
            <span class="w-6 h-0.5 bg-current rounded-full transition-all duration-300 group-hover:bg-primary"></span>
            <span class="w-6 h-0.5 bg-current rounded-full mt-1 transition-all duration-300 group-hover:bg-primary"></span>
            <span class="w-6 h-0.5 bg-current rounded-full mt-1 transition-all duration-300 group-hover:bg-primary"></span>
          </button>
        </div>

      </div>

      <!-- Menú móvil moderno -->
      <div
        id="nav-links"
        class="lg:hidden absolute top-full left-0 w-full bg-white/95 backdrop-blur-md border-b border-white/20 transform -translate-y-full opacity-0 transition-all duration-500 ease-in-out pointer-events-none"
      >
        <div class="max-w-7xl mx-auto px-4 py-6">
          <nav>
            <ul class="space-y-4">
              <li>
                <a href="#inicio" class="nav-link-mobile group flex items-center gap-3 px-4 py-3 text-gray-800 hover:text-primary hover:bg-primary/10 rounded-xl transition-all duration-300 font-medium">
                  <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                  </svg>
                  <span>Inicio</span>
                </a>
              </li>
              <li>
                <a href="#nosotros" class="nav-link-mobile group flex items-center gap-3 px-4 py-3 text-gray-800 hover:text-primary hover:bg-primary/10 rounded-xl transition-all duration-300 font-medium">
                  <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                  </svg>
                  <span>Nosotros</span>
                </a>
              </li>
              <li>
                <a href="#servicios" class="nav-link-mobile group flex items-center gap-3 px-4 py-3 text-gray-800 hover:text-primary hover:bg-primary/10 rounded-xl transition-all duration-300 font-medium">
                  <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                  </svg>
                  <span>Servicios</span>
                </a>
              </li>
              <li>
                <a href="#contacto" class="nav-link-mobile group flex items-center gap-3 px-4 py-3 text-gray-800 hover:text-primary hover:bg-primary/10 rounded-xl transition-all duration-300 font-medium">
                  <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  <span>Contacto</span>
                </a>
              </li>
            </ul>
            <!-- Botón CTA móvil -->
            <div class="mt-6 pt-6 border-t border-gray-200">
              <a href="#contacto" class="w-full inline-flex items-center justify-center gap-2 bg-gradient-to-r from-primary to-nosotros-blue text-white px-6 py-3 rounded-xl font-semibold hover:from-nosotros-blue hover:to-primary transform hover:scale-105 transition-all duration-300 shadow-lg">
                <span>Contáctanos</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
          </nav>
        </div>
      </div>

    </header>

    <!-- Contenido principal con padding para no tapar navbar -->
    <main class="flex-grow pt-nav overflow-x-hidden">
      <slot/>
    </main>

    <!-- Botón flotante de WhatsApp -->
    <a
    href="https://api.whatsapp.com/send?phone=524422669759&text=Hola,%20quiero%20más%20información"
    class="fixed bottom-5 right-5 bg-green-500 hover:bg-green-600 text-white p-4 rounded-full shadow-lg z-50 animate-bounce"
    target="_blank"
    rel="noopener noreferrer"
    title="Chatea por WhatsApp"
    >
    <img src="/assets/whatsapp.svg" alt="WhatsApp" class="w-6 h-6" />
    </a>


    <!-- Footer -->
    <footer class="w-full bg-bg-light text-center py-8 text-sm">
      <p>©️ {new Date().getFullYear()} CIPRES. Todos los derechos reservados.</p>
    </footer>

    <!-- Script navbar moderno -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const navbar = document.getElementById('navbar');
        const navToggle = document.getElementById('nav-toggle');
        const navLinks = document.getElementById('nav-links');
        const hero = document.getElementById('inicio');
        
        if (!navbar || !navToggle || !navLinks) {
          console.error('Elementos del navbar no encontrados');
          return;
        }

        // Función para alternar menú móvil
        const toggleMobileMenu = () => {
          const isOpen = navLinks.classList.contains('translate-y-0');
          
          if (isOpen) {
            // Cerrar menú
            navLinks.classList.remove('translate-y-0', 'opacity-100', 'pointer-events-auto');
            navLinks.classList.add('-translate-y-full', 'opacity-0', 'pointer-events-none');
            navToggle.setAttribute('aria-label', 'Mostrar menú');
            navToggle.setAttribute('aria-expanded', 'false');
          } else {
            // Abrir menú
            navLinks.classList.remove('-translate-y-full', 'opacity-0', 'pointer-events-none');
            navLinks.classList.add('translate-y-0', 'opacity-100', 'pointer-events-auto');
            navToggle.setAttribute('aria-label', 'Ocultar menú');
            navToggle.setAttribute('aria-expanded', 'true');
          }
        };

        // Evento de clic en el botón hamburguesa
        navToggle.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          console.log('Botón hamburguesa clickeado');
          toggleMobileMenu();
        });

        // Cerrar menú al hacer clic en un enlace
        document.querySelectorAll('.nav-link-mobile').forEach(link => {
          link.addEventListener('click', () => {
            toggleMobileMenu();
          });
        });

        // Cerrar menú al hacer clic fuera del navbar
        document.addEventListener('click', (e) => {
          const target = e.target as Node;
          if (!navbar.contains(target) && navLinks.classList.contains('translate-y-0')) {
            toggleMobileMenu();
          }
        });

        // Función para cambiar el fondo del navbar según el scroll
        const updateNavbar = () => {
          if (!hero) return;
          
          const scrollY = window.scrollY;
          const heroHeight = hero.offsetHeight;
          const navbarHeight = navbar.offsetHeight;
          
          if (scrollY > heroHeight - navbarHeight) {
            // Cambiar a fondo sólido con glassmorphism
            navbar.classList.remove('bg-transparent');
            navbar.classList.add('bg-white/90', 'backdrop-blur-md', 'border-white/20');
            navbar.classList.add('shadow-lg');
            // Cambiar color del texto a oscuro
            navbar.classList.add('navbar-scrolled');
          } else {
            // Mantener transparente
            navbar.classList.remove('bg-white/90', 'backdrop-blur-md', 'border-white/20');
            navbar.classList.remove('shadow-lg');
            navbar.classList.add('bg-transparent');
            // Cambiar color del texto a blanco
            navbar.classList.remove('navbar-scrolled');
          }
        };

        // Ejecutar al cargar y en scroll
        updateNavbar();
        window.addEventListener('scroll', updateNavbar);
        window.addEventListener('resize', updateNavbar);
      });
    </script>
  </body>
</html>
